% comment system
\newcommand{\sm}[1]{\textcolor{cb_red}{[#1]}}
\newcommand{\nr}[1]{\textcolor{cb_brown}{[#1]}}
\newcommand{\al}[1]{\textcolor{cb_blue}{[#1]}}
\newcommand{\td}[1]{\textcolor{cb_green}{[#1]}}
\newcommand{\ja}[1]{\textcolor{cb_orange}{[#1]}}
\newcommand{\mm}[1]{\textcolor{cb_purple}{[#1]}}


