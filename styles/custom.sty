% colorbrewer colors
\definecolor{cb_red}{rgb}{0.894,0.102,0.110}
\definecolor{cb_blue}{rgb}{0.216, 0.494, 0.722}
\definecolor{cb_green}{rgb}{0.302, 0.686, 0.290}
\definecolor{cb_purple}{rgb}{0.596, 0.306, 0.639}
